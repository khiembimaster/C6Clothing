<div class="container pb-4 h-100">
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h1 class="mb-4">{{title}}</h1>
                    <form id="form" action="{{form-action}}" method="post" enctype="multipart/form-data">
                        {{#if_eq title 'Upload category'}}
                        <div class="mb-3">
                            <label for="image" class="form-label">Category Image</label>
                            <input id="image" class="form-control" name="image" type="file" accept="image/*">
                        </div>
                        {{/if_eq}}
                        <div class="mb-3">
                            <label for="title" class="form-label">Category Name</label>
                            <input type="text" class="form-control" name="catName" id="title" {{#if category.CatName}}
                                value="{{category.CatName}}" {{else}} placeholder="Enter the category title" {{/if}}>
                        </div>

                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container pb-4 h-100">
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h1 class="mb-4">{{title}}</h1>
                    <form id="form" action="{{form-action}}" method="post" enctype="multipart/form-data">
                        {{#if_eq title 'Upload product'}}
                        <div class="mb-3">
                            <label for="image" class="form-label">Product Image</label>
                            <input id="image" class="form-control" name="image" type="file" id="formFile" required
                                accept="image/*" multiple>
                        </div>
                        {{/if_eq}}
                        <div class="mb-3">
                            <label for="title" class="form-label">Product Name</label>
                            <input type="text" class="form-control" name="name" id="title"
                                placeholder="Enter the product title">
                        </div>
                        <div class="mb-3">
                            <label for="tiny-description" class="form-label">Product Tiny Description</label>
                            <textarea class="form-control" name="tiny" id="tiny-description"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Product Full Description</label>
                            <textarea name="full" id="editor">
                                &lt;p&gt;This is some sample content.&lt;/p&gt;
                            </textarea>
                        </div>
                        {{#if categories}}
                        <div class="mb-3">
                            <label for="category" class="form-label">Product Category</label>
                            <select class="form-select" id="category" name="category">
                                {{#each categories}}
                                <option value="{{this.ID}}">{{this.CatName}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{/if}}
                        <div class="mb-3">
                            <label for="price" class="form-label">Product Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="text" id="price" class="form-control"
                                    aria-label="Amount (to the nearest dollar)" name="price">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="quantity" class="form-label">Product Quantity</label>
                            <input type="number" class="form-control" id="quantity" name="quantity"
                                placeholder="Enter the product quantity">
                        </div>
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
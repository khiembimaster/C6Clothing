<div class="container">
    <div class="row">
        <div class="col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-1">System management</h5>
                    <form action="https://localhost:3000/admin/signin" method="post">
                        <div class="form-floating mb-3">
                            <input name="username" type="text" class="form-control" id="un" placeholder="Username">
                            <label for="un">Username</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input name="password" type="password" class="form-control" id="pwd" placeholder="Password">
                            <label for="pwd">Password</label>
                        </div>
                        <button class="w-100 btn btn-primary btn-login text-uppercase fw-bold" type="submit">Sign
                            in
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="p-2 h-100">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <p class="m-0 fs-5">User list</p>
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>

    <div style="height: 540px;" class="bg-white rounded shadow overflow-hidden">
        <div class="row">
            <div class="container">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{this.ID}}</td>
                            <td>{{this.Username}}</td>
                            <td>{{this.Name}}</td>
                            <td>{{this.Email}}</td>
                            <td>
                                <a href="/admin/user/update/{{this.Username}}" class="btn btn-primary">Update</a>
                                <button class="btn btn-danger btn-delete" value="{{this.Username}}"
                                    onclick="return confirm('Are you sure you want to delete?')">Delete</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(".btn-delete").click(function (e) {
        $.ajax({
            url: 'https://localhost:3000/user/' + $(this).val(),
            type: "DELETE",
            success: function (result) {
                window.location.href = '/admin/user'
            }
        })
    })
</script>
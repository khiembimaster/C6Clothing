<script>
    $(() => {
        $('#form').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: "{{form-action}}",
                type: "PUT",
                datatype: "json/application",
                data: $(this).serializeArray(),
            }).done(function (data) {
                window.location.href = '/admin/category'
            })
        });
    })
</script>
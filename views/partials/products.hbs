{{#if products}}
<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      {{#each products}}
      <div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
        <div class="card">
          <img src="{{this.ImageUrl}}"
            class="card-img-top" alt="{{this.ProName}}" />
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <p class="small"><a href="#!" class="text-muted">{{this.Category}}</a></p>
            </div>

            <div class="d-flex justify-content-between mb-3">
              <h5 class="mb-0">{{this.ProName}}</h5>
              <h5 class="text-dark mb-0">${{this.Price}}</h5>
            </div>

            <div class="d-flex justify-content-between mb-2">
              <p class="text-muted mb-0">Available: <span class="fw-bold">{{this.Quantity}}</span></p>
              <a href="https://localhost:3000/product/{{this.ID}}" class="btn btn-primary">Buy Now</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
{{else}}
<div class="alert alert-dark" role="alert">
  There is no result!
</div>
{{/if}}
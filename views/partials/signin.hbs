<!-- Modal -->
<div class="modal fade" id="signin" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="signin" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="signupLabel">Sign In</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="https://localhost:3000/account/login" method="post">
            <div class="form-floating mb-3">
                <input name="username" type="text" class="form-control" id="un" placeholder="Username">
                <label for="un">Username</label>
            </div>
            <div class="form-floating mb-3">
                <input name="password" type="password" class="form-control" id="pwd" placeholder="Password">
                <label for="pwd">Password</label>
            </div>
            <hr>
            <div class="d-flex gap-2 my-3">
                <button class="w-50 btn btn-primary btn-login text-uppercase fw-bold" type="submit">Sign
                    in</button>
                <button type="button" class="w-50 btn btn-primary btn-login text-uppercase fw-bold" data-bs-toggle="modal" data-bs-target="#signup">
                Sign up</button>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <div class="d-grid mt-2">
          <a class="btn btn-google text-uppercase fw-bold bg-light text-primary border"
              href="https://localhost:3000/account/auth/google">
              <i class="fab fa-google me-2"></i> Sign up with Google
          </a>
        </div>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
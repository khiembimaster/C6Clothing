<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-6">
            <!-- Hình ảnh chính của sản phẩm -->
            <img src="{{product.ImageUrl}}" alt="Product Main Image" class="img-fluid">
            
        </div>
        <div class="col-md-6">
            <!-- Thông tin chi tiết sản phẩm -->
            <h1 style="font-weight: bold; 
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
                text-transform: uppercase;">{{product.ProName}}</h1>
            <p style="font-size: 18px; color: #666;">{{{product.FullDes}}}</p>
            <h3 style="font-size: 40px; color: #000;">Price: ${{product.Price}}</h3>
            <div style="display: flex; gap: 10px; align-items: center;">
                <div style="flex: 1;">
                    <label for="sizeSelect" style="font-size: 18px; color: #333;">Category</label>
                    <h3>{{product.CatName}}</h3>
                </div>
                <div style="flex: 1;">
                    <label for="quantityInput" style="font-size: 18px; color: #333;">Quantity:</label>
                    <input type="number" id="quantityInput" name="quantity" value="1" min="1" class="form-control">
                </div>
            </div>
            <div class="row" style="margin-top: 15px;">
                <button type="button" class="btn btn-outline-dark" id="btn-add-to-cart" style="font-size: 20px;">Add to cart</button>
            </div>
            <div class="row" style="margin-top: 15px;">
                <button type="button" class="btn btn-outline-dark" style="font-size: 20px;">Buy it now</button>
            </div>
        </div>

    </div>
</div>

<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-6">
            <!-- Hình ảnh chính của sản phẩm -->
            <img src="./image/catrgory shoes.png" alt="Product Main Image" class="img-fluid">
            <!-- Các hình ảnh nhỏ khác -->
            <div class="row mt-4">
                <div class="col-md-3">
                    <img src="./image/catrgory shoes.png" alt="Thumbnail Image 1" class="img-fluid">
                </div>
                <div class="col-md-3">
                    <img src="./image/catrgory shoes.png" alt="Thumbnail Image 2" class="img-fluid">
                </div>
                <div class="col-md-3">
                    <img src="./image/catrgory shoes.png" alt="Thumbnail Image 2" class="img-fluid">
                </div>
                <!-- Thêm hình ảnh khác tùy thuộc vào sản phẩm -->
            </div>
        </div>
        <div class="col-md-6">
            <!-- Thông tin chi tiết sản phẩm -->
            <h1 style="font-weight: bold; 
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
                text-transform: uppercase;">Tên sản phẩm</h1>
            <p style="font-size: 18px; color: #666;">Mô tả chi tiết sản phẩm</p>
            <h3 style="font-size: 40px; color: #000;">Giá: $500</h3>
            <div style="display: flex; gap: 10px; align-items: center;">
                <div style="flex: 1;">
                    <label for="sizeSelect" style="font-size: 18px; color: #333;">Select size:</label>
                    <select class="form-select" id="sizeSelect">
                        <option selected>Size</option>
                        <option value="1">Size 1</option>
                        <option value="2">Size 2</option>
                        <!-- Thêm các size khác tùy thuộc vào sản phẩm -->
                    </select>
                </div>
                <div style="flex: 1;">
                    <label for="quantityInput" style="font-size: 18px; color: #333;">Quantity:</label>
                    <input type="number" id="quantityInput" value="1" min="1" class="form-control">
                </div>
            </div>
            <div class="row" style="margin-top: 15px;">
                <button type="button" class="btn btn-outline-dark" style="font-size: 20px;">Add to cart</button>
            </div>
            <div class="row" style="margin-top: 15px;">
                <button type="button" class="btn btn-outline-dark" style="font-size: 20px;">Buy it now</button>
            </div>
        </div>

    </div>
</div>
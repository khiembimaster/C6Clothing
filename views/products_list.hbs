<div class="container">
    <div class="row my-5 ">
        <h2 style="font-weight: bold; 
                    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
                    text-transform: uppercase;">All product</h2>
    </div>
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-2">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid justify-content-center">
                    <form class="d-flex flex-column">
                        <label for="priceMin" class="form-label">Price Min: <span id="priceMinValue">0</span>$</label>
                        <input type="range" class="form-range mb-2" min="0" max="100" id="priceMin" value="{{min_price}}">

                        <label for="priceMax" class="form-label">Price Max: <span id="priceMaxValue">0</span>$</label>
                        <input type="range" class="form-range mb-2" min="0" max="100" id="priceMax" value="{{max_price}}">
                        <div class="d-grid gap-2 mb-2">
                            <button class="btn btn-outline-success sort-btn" value="ASC">Ascending</button>
                        </div>
                        <div class="d-grid gap-2 mb-2">
                            <button class="btn btn-outline-success sort-btn" value="DESC">Descending</button>
                        </div>
                    </form>
                </div>
            </nav>
        </div>
        <div class="col-lg-10">
            <div class="row">
                {{#each products}}
                <div class="col-md-4 mb-4">
                    <div class="category-card">
                        <img class="card-img-top" src="{{this.ImageUrl}}" alt="Card image cap">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{this.ProName}}</h5>
                            <p class="card-text">Price: ${{this.Price}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            <div class="row">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        

                        {{#list totalPages}}
                        {{this}}
                        {{/list}}            

                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


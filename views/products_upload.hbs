<div class="container pb-4">
<h1 class="mb-4">Product Upload</h1>
<form action="" method="post" enctype="multipart/form-data">
    <div class="mb-3">
    <label for="image" class="form-label">Product Image</label>
     <input id="image" class="form-control" name="image" type="file" id="formFile" multiple>
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Product Name</label>
        <input type="text" class="form-control" name="name" id="title" placeholder="Enter the product title">
    </div>
    <div class="mb-3">
        <label for="tiny-description" class="form-label">Product Tiny Description</label>
        <textarea class="form-control" name="tiny" id="tiny-description"></textarea>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Product Full Description</label>
        <div id="description-editor"></div>
        <input type="hidden" id="description" name="full">
    </div>
    <div class="mb-3">
        <label for="category" class="form-label">Product Category</label>
        <select class="form-select" id="category" name="category">
            {{#each categories}}
            <option value="{{this.CatID}}">{{this.CatName}}</option>
            {{/each}}
        </select>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Product Price</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="text" id="price" class="form-control" aria-label="Amount (to the nearest dollar)" name="price">
            <span class="input-group-text">.00</span>
        </div>
    </div>
    <div class="mb-3">
        <label for="quantity" class="form-label">Product Quantity</label>
        <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Enter the product quantity">
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
</div>
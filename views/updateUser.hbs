
<!-- Modal -->
<div class="container">
    <div class="row">
        <h1 class="text-center" >Update information</h1>
        <form >
            <div class="form-floating mb-3">
                <input name="username" type="text" class="form-control" id="un" placeholder="Username" value="{{user.Username}}">
                <label for="un">Username</label>
            </div>
            <div class="form-floating mb-3">
                <input name="password" type="password" class="form-control" id="pwd" placeholder="Password" value="{{user.PassWord}}">
                <label for="pwd">Password</label>
            </div>
            <div class="form-floating mb-3">
                <input name="name" type="text" class="form-control" id="name" placeholder="Name" value="{{user.Name}}">
                <label for="name">Name</label>
            </div>
            <div class="form-floating mb-3">
                <input name="email" type="email" class="form-control" id="email" placeholder="Email" value="{{user.Email}}">
                <label for="email">Email</label>
            </div>
            <hr>
            <div class="d-flex gap-2 my-3">
                
            </div>
        </form>
    </div>
</div>